{
  "listeners": [
    {
      "address": "0.0.0.0",
      "port": 8080,
      "https": false
    }
  ],

  "log": {
    "log_path": "",
    "logfile_base_name": "",
    "log_size_limit": 100000000,
    "log_level": "TRACE"
  },

  "app": {
    "server_threads": 16,
	"use_gzip": true,
    "document_root": "./static",
    "static_files_path": ["./static"],
    "upload_path": "./uploads",
    "file_types": [
      "gif", "png", "jpg", "js", "css", "html", "ico", "svg",
      "ttf", "otf", "woff", "woff2", "eot", "txt", "json"
    ],
    "static_files": true,
    "default_page": "index.html",
    "enable_server_header": true,
    "home_page": "/"
  },
  "controllers": [
    {
      "path": "/todos",
      "controller": "Todo"
    }
  ],

  "db_clients": [
    {
      "name": "default",
      "rdbms": "postgresql",
      "host": "127.0.0.1",
      "port": 5432,
      "dbname": "drogon-db",
      "user": "<environment variable POSTGRES_USER must be set>",
      "passwd": "<environment variable POSTGRES_PASSWORD must be set>",
      "is_fast": false,
      "connection_number": 1
    }
  ]
}
